@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lubota's MAN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="https://pngicon.ru/file/uploads/sova.png" type="image/x-icon">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center flex-column" style=" height: 100vh;">
            <form method="post" action="/Home/tests">
                <div class=" d-flex justify-content-center">
                    <div>
                        <div class="form-group mb-3">
                            <label for="cam1" class="form-label h3">Ім'я користувача : </label>
                            <input id="cam1" class="form-control form-control-lg" type="text" placeholder="Логін" name="username" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="cam2" class="form-label h3">Пароль : </label>
                            <input id="cam2" class="form-control form-control-lg" type="password" placeholder="Пароль" name="password" required>
                        </div>
                        <div class="form-group mb-3">
                            <select size="1" name="users" class="form-select form-control-lg">
                                <option disabled>Ваша роль</option>
                                <option selected value="player">Гравець</option>
                                <option value="leader">Ведучий</option>
                            </select>
                        </div>  
                        <div class=" d-flex justify-content-center">
                              <button type="submit" class="btn btn-outline-success btn-lg">Увійти</button>
                        </div>
                      
                    </div>
                </div>
            </form>
        </div>
    </div>
    @*<a role="button" asp-controller="Leading" asp-action="ListLeading">List Leading</a>*@
</body>
</html>
