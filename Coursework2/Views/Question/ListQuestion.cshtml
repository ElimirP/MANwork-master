@model Tuple<List<Coursework2.Data.Models.Questions>, List<Coursework2.Data.Models.PackageOfQuestions>,string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>



    <table border="1">
        <caption>Усі питання, що е в базі:</caption>
        <tr>
            <th>Номер</th>
            <th>Назва пакету</th>
            <th>Текст питання</th>
            <th>Відповідь</th>
            <th>Коментар</th>
            <th>Автор</th>
        </tr>

        @{
            foreach (var x in @Model.Item1)
            {
                string h = Convert.ToString(x.Id);
                <tr>
                    <th>@h</th>
                    <th>@x.PackageOfQuestions?.Name</th>
                    <th>@x.QuestionText</th>
                    <th>@x.Answer</th>
                    <th>@x.Comment</th>
                    <th>@x.Author</th>
                    <th>
                        <form method="post" action="/Question/EditingQuestion">
                            <input type="hidden" name="idQuestion" value="@h" />
                            <input type="hidden" name="idLeading" value="@Model.Item3" />
                            <button type="submit">Редагувати</button>
                        </form>
                    </th>
                </tr>
            }
        }

    </table>




    <table border="1">
        <caption>Усі питання, що е в базі:</caption>
        <tr>
            <th>Номер</th>
            <th>Назва турніру</th>
            <th>Автор пакету</th>
            <th>Дата створення</th>
        </tr>
        <tr>
            @{
                foreach (var x in @Model.Item2)
                {
                <tr>
                    <th>@x.Id</th>
                    <th>@x.Name</th>
                    <th>@x.PackageEditor</th>
                    <th>@x.DateOfCreation</th>
                    <th>
                        <form method="post" action="/Question/EditingPackage">
                            <input type="hidden" value="@x.Id" name="idPackage">
                            <input type="hidden" name="idLeading" value="@Model.Item3" />
                            <button type="submit">Редагувати</button>
                        </form>
                    </th>
                </tr>
                }
            }
        </tr>
    </table>
    <br />
    <style>
        .abobaBlock {
            display: flex;
            flex-wrap: nowrap;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            margin: 10px;
        }
        .abobaMain{
            display: flex;
    align-items: center;
    flex-direction: row;
    flex-wrap: nowrap;
    align-content: center;
        }
    </style>

        <form class="abobaMain" method="post" action="/Question/addPackage">
            <div class="abobaBlock">
                <label>Назва пакету питань:</label>
                <input type="text" name="name_of_package" required>
            </div>
            <div class="abobaBlock">
                <label>Хто редактор пакету:</label>
                <input type="text" name="package_editor" required>
            </div>
            <div class="abobaBlock">
            <label>Коли створено пакет:</label>
            <input type="datetime-local" name="datetime" required>
              </div>
               <div class="abobaBlock">
                   <label>&nbsp;</label>
            <input type="hidden" name="idLeading" value="@Model.Item3">
            <button type="submit">Створити пакет</button>
               </div>

        </form>
       
        <hr />
        <form method="post" action="/Question/addQuestion">
            <div  class="abobaMain" >
                  <div class="abobaBlock">
                <label>Введіть текст питання:</label>
                <input type="text" name="question_text" required>
            </div>
            <div class="abobaBlock">
                <label>Введіть відповідь питання:</label>
                <input type="text" name="answer" required>
            </div>
            <div class="abobaBlock">
                <label>Введіть коментар до питання:</label>
                <input type="text" name="сomment" required>                
            </div>
            </div>
          <div  class="abobaMain" >
               <dv class="abobaBlock">
                <label>Введіть автора питання:</label>
                <input type="text" name="author" required>
            </dv>
            <div class="abobaBlock">
                <label>Виберіть, до якого пакету належить питання:</label>
                <select size="1" name="packages">
                    <option disabled>Пакети питань</option>
                    @{
                        foreach (var x in @Model.Item2)
                        {
                            <option value="@x.Id">@x.Name</option>
                        }
                    }
                </select>
            </div>
            <input type="hidden" name="idLeading" value="@Model.Item3">
            <div class="abobaBlock">
                <label>&nbsp;</label>
                <button type="submit">Створити пакет питань</button>
            </div>
          </div>
           

        </form>

        <form method="post" action="/Leading/ListLeadingString">
            <input type="hidden" name="idLeading" value="@Model.Item3">
            <button type="submit">Повернутися назад</button>
        </form>
  
</body>

</html>
