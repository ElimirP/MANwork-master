@model Tuple<List<Coursework2.Data.Models.Questions>,List<Coursework2.Data.Models.PackageOfQuestions>, string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lubota's MAN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="https://pngicon.ru/file/uploads/sova.png" type="image/x-icon">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center flex-column" style=" height: 100vh;">
            <form method="post" action="/Question/SaveQuestion">
                <div class=" d-flex justify-content-center">
                    <div>
                        <div class="form-group mb-3">
                            <label for="cam1" class="form-label h5">Введіть текст питання: </label>
                            <input id="cam1" class="form-control" type="text" name="question_text" required value="@Model.Item1[0].QuestionText">
                        </div>
                        <div class="form-group mb-3">
                            <label for="cam2" class="form-label h5">Введіть відповідь питання:</label>
                            <input id="cam2" class="form-control" type="text" name="answer" required value="@Model.Item1[0].Answer">
                        </div>
                        <div class="form-group mb-3">
                            <label for="cam3" class="form-label h5">Введіть коментар до питання:</label>
                            <input id="cam3" class="form-control" type="text" name="сomment" required value="@Model.Item1[0].Comment">
                        </div>
                        <div class="form-group mb-3">
                            <label for="cam4" class="form-label h5">Хто автор питання:</label>
                            <input id="cam4" class="form-control" type="text" name="author" required value="@Model.Item1[0].Author">
                        </div>
                        <div class="form-group mb-3">
                            <label for="cam5" class="form-label h5">До якого пакету питань відноситься це питання:</label>
                            <select id="cam5" size="1" name="packages" class="form-select">
                                <option disabled>Виберіть, до якого пакету відноситься питання:</option>
                                @{
                                    foreach (var x in @Model.Item2)
                                    {
                                        if (x.Id == Model.Item1[0].IdPackage)
                                        {
                                            <option value="@x.Id" selected>@x.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@x.Id">@x.Name</option>

                                        }
                                    }
                                }
                            </select>
                        </div>
                        <input type="hidden" name="idQuestion" value="@Model.Item1[0].Id" />
                        <input type="hidden" name="idLeading" value="@Model.Item3" />
                        <div class=" d-flex justify-content-center">
                            <button type="submit" class="btn btn-outline-success btn-lg">Зберегти</button>
                        </div>
                    </div>
                </div>
            </form>
            
    <form method="post" action="/Question/DellQuestion">
        <input type="hidden" name="idQuestion" value="@Model.Item1[0].Id" />
        <input type="hidden" name="idLeading" value="@Model.Item3" />
        <button type="submit" class="btn btn-outline-danger btn-lg">Видалити</button>
    </form>
        </div>
    </div>

</body>
</html>
