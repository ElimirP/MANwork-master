@model Tuple<string, string, List<Coursework2.Data.Models.CurrentQuestion>, string, List<Coursework2.Data.Models.Questions>>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lubota's MAN</title>
    <link rel="shortcut icon" href="https://pngicon.ru/file/uploads/sova.png" type="image/x-icon">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
<div class="container">
<div class="d-flex justify-content-center flex-column" style=" height: 100vh;">

    <h4  class="text-center">@Model.Item3[0].Question</h4>
    <hr>
    <h1 id="Timer" class="text-center"></h1>
    <div id="div_form" style="display:none">
        <h4 class="text-center">@Model.Item3[0].Questions?.Answer</h4>
        <h4 class="text-center">@Model.Item3[0].Questions?.Comment</h4>
        <form method="post" action="/CurrQuestion/NextQuestions">
            <input type="hidden" name="idGameSession" value="@Model.Item1">
            <input type="hidden" name="idPackage" value="@Model.Item2">
            <input type="hidden" name="idLeading" value="@Model.Item4">
            <div class="d-flex justify-content-center">
                 <button type="submit" class="btn btn-outline-success">Наступне питання</button>
            </div>
           
        </form>
    </div>
</div>
</div>
<script src="~/JS/CurrQuestionLeading.js"></script>
</body>

</html>
