@model Tuple<List<Coursework2.Data.Models.CurrentQuestion>, string, string, string, List<Coursework2.Data.Models.Questions>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lubota's MAN</title>
    <link rel="shortcut icon" href="https://pngicon.ru/file/uploads/sova.png" type="image/x-icon">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
<div class="container">
    <div class="d-flex justify-content-center flex-column" style=" height: 100vh;">
<h4 class="text-center">@Model.Item1[0].Question</h4>
<h4 class="text-center">Ответ: @Model.Item1[0].Questions?.Answer</h4>
<h4 class="text-center">Коментарий: @Model.Item1[0].Questions?.Comment</h4>

@{
    if (@Model.Item1.Count() == @Model.Item5.Count())
    {
        <form method="post" action="/CurrQuestion/CurrQuestionFinishUsers">
            <input type="hidden" name="idUsers" value="@Model.Item3">
            <input type="hidden" name="idGameSession" value="@Model.Item2">
            <hr>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success">Таблиця тимчасових результатів</button>
                     
            </div>
               </form>
    }
    else
    {
        <form method="post" action="/CurrQuestion/CurrQuestionUser" id="Form">
            <input type="hidden" name="idGameSession" value="@Model.Item2">
            <input type="hidden" name="idUsers" value="@Model.Item3">
            <input type="hidden" name="idPackage" value="@Model.Item4">
            <button type="submit" style="display: none"></button>
        </form>
    }
}
</div>
</div>
<script src="~/JS/CurrQuestionUsersWait.js"></script>
</body>

</html>
